generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id       String  @id @default(uuid())
  name     String
  email    String
  password String
  role     String  @default("user")
  active   Boolean @default(false)
  create_at DateTime @default(now())
  Post     Post[]
}

model Post {
  id           String @id @default(uuid())
  title        String
  description  String
  like     Int
  image        String
  reading_time Float
  category     String
  create_at DateTime @default(now())
  fk_user_id   String
  user         User   @relation(fields: [fk_user_id], references: [id])
}
